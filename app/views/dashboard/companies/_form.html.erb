<div class="form_center">
  <%= form_for [:dashboard, @company], url: dashboard_company_path do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <%= f.fields_for :company_setting do |ff| %>
      <div class="field">
        <%= f.label :cutoff_date %>
        <%= ff.text_field :cutoff_date %>
      </div>
    <% end %>

    <div class="field">
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
