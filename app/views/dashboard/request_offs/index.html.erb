<% provide :title, t("request_offs.index.title") %>
<div class="color_black row">
  <div class="row">
    <table class="table table-striped table-hover color_black">
      <thead>
        <tr>
          <th><%= t "index" %></th>
          <th><%= t "time_off_from" %></th>
          <th><%= t "time_off_to" %></th>
          <th><%= t "reason" %></th>
          <th><%= t "action" %></th>
        </tr>
      </thead>
      <tbody>
        <% @request_offs.each_with_index do |request_off, index| %>
          <tr>
            <td>
              <%= current_index @request_offs.current_page,
                Settings.per_page.dashboard.request_off, index %>
            </td>
            <td>
              <%= l request_off.off_have_salary_from, format: :date_month_year %>
            </td>
            <td>
              <%= l request_off.off_have_salary_to, format: :date_month_year %>
            </td>
            <td><%= request_off.reason %></td>
            <td>
              <%= link_to dashboard_user_request_offs_path do %>
                <span class="glyphicon glyphicon-edit" %></span>
              <% end %>
              <%= link_to dashboard_user_request_offs_path, method: :delete,
                data: {confirm: t("are_you_sure")} do %>
                <span class="glyphicon glyphicon-trash" %></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <center><%= paginate @request_offs %></center>
  </div>
</div>
